@model BeYourMarket.Web.Models.ItemModel

<div class="card">
    <div class="card-image">
        <a href="@Url.Action("Listing", "Listing", new { id = Model.ItemCurrent.ID })">
            <img alt="Listing Thumbnail" src="@Model.UrlPicture">
            @if (Model.ItemCurrent.Price.HasValue)
            {
                <span class="card-img-label">@Html.DisplayFor(x => Model.ItemCurrent.PriceFormatted)</span>
            }
        </a>
    </div>
    <div class="card-content">
        <h5><a class="card-title">@Model.ItemCurrent.Title</a></h5>

        <p class="truncate">
            @Model.ItemCurrent.Description
        </p>
    </div>
    <div class="card-action">
        <a href="@Url.Action("Listing", "Listing", new { id = Model.ItemCurrent.ID })"><i class="fa fa-map-marker"></i> @Model.ItemCurrent.Location</a>
    </div>
</div>